{
  "appId": "com.herotools.openwispr",
  "productName": "OpenWhispr",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "preload.js",
    "whisper_bridge.py",
    "package.json",
    "node_modules/**/*",
    "src/dist/**/*",
    "src/helpers/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils.js",
    "src/utils/**/*",
    "src/updater.js",
    "src/components.json",
    "!node_modules/.cache/**/*",
    "!src/node_modules/**/*"
  ],
  "asarUnpack": [
    "whisper_bridge.py",
    "**/node_modules/ffmpeg-static/**/*"
  ],
  "extraResources": [
    "src/assets/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "src/assets/icon.icns",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "resources/mac/entitlements.mac.plist",
    "entitlementsInherit": "resources/mac/entitlements.mac.plist",
    "identity": "HeroTools Inc. (9R85XFMH59)",
    "extendInfo": {
      "LSUIElement": true,
      "NSMicrophoneUsageDescription": "OpenWhispr needs microphone access for speech-to-text transcription.",
      "NSAccessibilityUsageDescription": "OpenWhispr needs accessibility permissions to paste transcribed text into other applications."
    }
  },
  "afterSign": "scripts/afterSign.js",
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "src/assets/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "src/assets/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dmg": {
    "title": "OpenWhispr",
    "icon": "src/assets/icon.icns",
    "background": "src/assets/dmg-background.png",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "publish": {
    "provider": "github",
    "owner": "HeroTools",
    "repo": "open-whispr",
    "private": false,
    "releaseType": "release"
  }
}
