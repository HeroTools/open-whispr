{
  "appId": "com.herotools.openwhispr",
  "productName": "OpenWhispr",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "preload.js",
    "whisper_bridge.py",
    "package.json",
    "node_modules/**/*",
    "src/dist/**/*",
    "src/helpers/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/utils.js",
    "src/utils/**/*",
    "src/updater.js",
    "src/components.json",
    "!node_modules/.cache/**/*",
    "!src/node_modules/**/*"
  ],
  "asarUnpack": [
    "whisper_bridge.py",
    "**/node_modules/ffmpeg-static/**/*"
  ],
  "extraResources": [
    "assets/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/icon.icns",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "identity": "HeroTools Inc. (9R85XFMH59)",
    "extendInfo": {
      "LSUIElement": true,
      "NSMicrophoneUsageDescription": "OpenWhispr needs microphone access for speech-to-text transcription.",
      "NSAccessibilityUsageDescription": "OpenWhispr needs accessibility permissions to paste transcribed text into other applications."
    }
  },
  "afterSign": "scripts/afterSign.js",
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "rpm",
      "tar.gz",
      "flatpak"
    ],
    "icon": "assets/icon.png",
    "category": "Utility",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "flatpak": {
    "runtime": "org.freedesktop.Platform",
    "runtimeVersion": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "useWaylandFlags": true,
    "finishArgs": [
      "--socket=wayland",
      "--socket=fallback-x11",
      "--share=network",
      "--share=ipc",
      "--device=dri",
      "--talk-name=org.freedesktop.portal.Desktop",
      "--socket=pulseaudio",
      "--filesystem=home",
      "--filesystem=xdg-documents",
      "--filesystem=xdg-download",
      "--talk-name=org.freedesktop.Flatpak",
      "--talk-name=org.freedesktop.Notifications"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dmg": {
    "title": "OpenWhispr",
    "icon": "assets/icon.icns",
    "background": "assets/dmg-background.png",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "publish": {
    "provider": "github",
    "owner": "HeroTools",
    "repo": "open-whispr",
    "private": false,
    "releaseType": "release"
  }
}
